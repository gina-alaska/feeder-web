= bootstrap_form_for(@highlight, url: entry_highlights_path(@entry)) do |f|
  - if @highlight.errors.any?
    #error_explanation
      %h2
        = pluralize(@highlight.errors.count, "error")
        prohibited this highlight from being saved:
      %ul
        - @highlight.errors.full_messages.each do |message|
          %li= message
  = f.text_area :description, rows: 10
  .pull-right.form-group
    = link_to @entry, class: 'btn btn-default' do
      Cancel
    = f.primary
